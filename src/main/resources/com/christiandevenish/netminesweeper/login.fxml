<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" spacing="35.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.christiandevenish.netminesweeper.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Minesweeper!">
        <font>
            <Font name="Arial Black" size="24"/>
        </font>
    </Label>

    <Label text="Name"/>
    <TextField fx:id="nameField" alignment="CENTER"/>

    <Label text="IP Address"/>
    <TextField fx:id="ipField" alignment="CENTER"/>

    <Label text="Port"/>
    <TextField fx:id="portField" alignment="CENTER"/>

    <Button fx:id="enterButton" text="Connect" onAction="#enterButtonClick"/>
</VBox>
