<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" spacing="100.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.christiandevenish.netminesweeper.server.AdminController">

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <Button fx:id="startButton" text="Start Game" onAction="#startGame"/>
    <Button fx:id="kickPlayer" text="Kick Player" onAction="#kickPlayer"/>
    <Button fx:id="restartButton" text="Restart Game" onAction="#restartGame"/>

</HBox>
